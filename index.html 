import random # This imports a library to generate random numbers

secret_number = random.randint(1, 10) # Choose a random number from 1 to 10
guess = 0 # This stores the player's guess, starting at 0

print("I'm thinking of a number between 1 and 10.")

while guess != secret_number:
    guess = int(input("Enter your guess: ")) # Ask the user for their guess

    if guess > secret_number:
        print("Too high! Try again.")
    elif guess < secret_number:
        print("Too low! Try again.")
    else:
        print("You got it! My number was", secret_number)

